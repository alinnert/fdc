{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "jsx": "react-jsx"
  },
  "include": [
    "server",
    "ui",
    "global",
    "vite.config.ts",
    "postcss.config.ts",
    "tailwind.config.ts"
  ]
}
